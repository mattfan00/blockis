<!DOCTYPE html>
<html>
  <head>
    <%- include('templates/standard.ejs') %>
    <link rel="stylesheet" href="/stylesheets/gameList.css">
  </head>
  <body>
    <%- include('templates/navBar.ejs') %>

    <div class="main"> 
      <div class="header">
        <h1>browse games</h1>
        <div>choose a game to join or create your own</div>
      </div>
      <div class="table">
        <div class="table-header">
          <a href="/game/new"><button><h3>create room</h3></button></a>
        </div>
        <% for (room of rooms) { %>
          <div class="row" onclick="window.location='/game/<%= room.id %>'">
            <div class="col"><%= room.name %></div>
            <div class="col">Battle Royale</div>
            <div class="col"><%= room.users.length %>/7</div>
          </div>
        <% } %>
      </div>
    </div>
  </body>
</html>